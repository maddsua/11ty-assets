{
	"compilerOptions": {
		"lib": ["DOM", "ES6", "ESNext"],
		"target": "ESNext",
		"module": "ESNext",
		"typeRoots": [
			"node_modules/@types"
		],
		"rootDir": "src/",
		"outDir": "dist/",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"sourceMap": false,
		"noEmit": true,
		"jsx": "preserve"
	},
	"exclude": [
		"node_modules",
		"dist",
		"components",
		"*.d.ts"
	]
}
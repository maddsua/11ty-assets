{
	"private": false,
	"name": "@maddsua/ssg-assets",
	"version": "3.4.0",
	"type": "module",
	"engines": {
		"node": ">=16.4.0"
	},
	"bin": {
		"ssgassets": "./bin/main.js",
		"ssga": "./bin/main.js"
	},
	"main": "./dist/dummy.js",
	"types": "./dist/dummy.d.ts",
	"exports": {
		".": {
			"default": "./dist/dummy.js",
			"types": "./dist/dummy.d.ts"
		},
		"./react": {
			"default": "./components/react/index.ts",
			"types": "./components/react/index.ts"
		},
		"./astro": {
			"default": "./components/astro/index.js",
			"types": "./components/astro/index.ts"
		},
		"./vue": {
			"default": "./components/vue/index.ts",
			"types": "./components/vue/index.ts"
		},
		"./html": {
			"default": "./components/html/index.ts",
			"types": "./components/html/index.ts"
		},
		"./dom": {
			"default": "./components/dom/index.ts",
			"types": "./components/dom/index.ts"
		}
	},
	"files": [
		"bin",
		"dist",
		"package.json",
		"package-lock.json",
		"components/common",
		"components/astro",
		"components/react",
		"components/vue",
		"components/html",
		"components/dom",
		"*.d.ts"
	],
	"scripts": {
		"lint": "tsc",
		"bundle": "esbuild src/main.ts --outfile=bin/main.js --bundle --platform=node --format=esm --external:sharp --external:chalk --external:minimatch",
		"build": "run-s lint bundle",
		"dev": "esbuild src/main.ts --outfile=bin/main.js --bundle --platform=node --format=esm --external:sharp --external:chalk --external:minimatch --watch",
		"test": "node bin/main.js --verbose",
		"test_components": "cd components && tsc --noemit",
		"deploy": "npm publish --access=public"
	},
	"dependencies": {
		"chalk": "^5.3.0",
		"minimatch": "^9.0.3",
		"sharp": "^0.32.4"
	},
	"devDependencies": {
		"@types/node": "^18.16.17",
		"astro": "^2.7.0",
		"npm-run-all": "^4.1.5",
		"preact": "^10.15.1",
		"vue": "^3.3.4"
	},
	"description": "Converts media assets for your static website and provides handy components fro React, Astro and Vue",
	"keywords": [
		"build",
		"assets",
		"component",
		"astro",
		"vue"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/maddsua/ssg-assets.git"
	}
}

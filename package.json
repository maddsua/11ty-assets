{
	"private": false,
	"name": "@maddsua/ssg-assets",
	"version": "1.6.2",
	"type": "module",
	"engines" : { 
		"node" : ">=16.4.0"
	},
	"bin": {
		"ssgassets": "./dist/main.js",
		"ssga": "./dist/main.js"
	},
	"main": "./dist/dummy.js",
	"types": "./dist/dummy.d.ts",
	"exports": {
		".": {
			"default": "./dist/dummy.js",
			"types": "./dist/dummy.d.ts"
		},
		"./react": {
			"default": "./components/react/index.ts",
			"types": "./components/react/index.ts"
		},
		"./astro": {
			"default": "./components/astro/index.js",
			"types": "./components/astro/index.ts"
		},
		"./vue": {
			"default": "./components/vue/index.ts",
			"types": "./components/vue/index.ts"
		}
	},
	"files": [
		"dist",
		"package.json",
		"package-lock.json",
		"components",
		"*.d.ts"
	],
	"scripts": {
		"build": "tsc",
		"bundle": "esbuild src/main.ts --outfile=bin/main.js --bundle --platform=node --format=esm",
		"dev": "tsc --watch",
		"test": "node dist/main.js tests/assets/:tests/result/",
		"test_components": "cd components && tsc --noemit"
	},
	"dependencies": {
		"chalk": "^5.2.0",
		"glob": "^10.2.7",
		"minimatch": "^9.0.1",
		"sharp": "^0.32.1"
	},
	"devDependencies": {
		"@types/node": "^18.16.17",
		"astro": "^2.7.0",
		"preact": "^10.15.1",
		"vue": "^3.3.4"
	},
	"description": "Converts media assets for your static website and provides handy components fro React, Astro and Vue",
	"keywords": [
		"build",
		"assets",
		"component",
		"astro",
		"vue"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/maddsua/ssg-assets.git"
	}
}

{
	"private": false,
	"name": "@maddsua/ssg-assets",
	"version": "1.5.3",
	"description": "Converts media assets for your static website and provides handy components fro React, Astro and Vue",
	"keywords": [
		"build",
		"assets",
		"component",
		"astro",
		"vue"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/maddsua/ssg-assets.git"
	},
	"bin": {
		"ssgassets": "./dist/cli/main.js",
		"ssga": "./dist/cli/main.js"
	},
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"default": "./dist/index.js",
			"types": "./dist/index.d.js"
		},
		"./astro": {
			"default": "./components/astro/index.js",
			"types": "./components/astro/index.d.ts"
		},
		"./vue": {
			"default": "./components/vue/index.js",
			"types": "./components/vue/index.d.ts"
		}
	},
	"files": [
		"dist",
		"package.json",
		"package-lock.json",
		"components",
		"*.d.ts"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "node dist/cli/main.js tests/assets/:tests/result/"
	},
	"dependencies": {
		"chalk": "^5.2.0",
		"glob": "^10.2.7",
		"minimatch": "^9.0.1",
		"sharp": "^0.32.1"
	},
	"devDependencies": {
		"@types/node": "^18.16.17",
		"astro": "^2.7.0",
		"preact": "^10.15.1",
		"vue": "^3.3.4"
	}
}
